---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Experiencia from "../components/Experiencia.astro";
import SectionContainer from "../components/SectionContainer.astro";
import AboutMe from "../components/AboutMe.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
import UserIcon from "../icons/User.astro";
import CodeIcon from "../icons/Code.astro";
import Proyectos from "../components/Proyectos.astro";
---

<Layout
	title="Portafolio de Brandon Toapanta - Desarrollador de Software y Programador web con 1 aÃ±o de experiencia"
	description="Contrata a Brandon Toapanta como desarrollador de software, para creacion de aplicaciones de software o web. Desarrollador de Software y Desarrollador Web. Apacionado en el Desarrollo de Software con ideas inovadoras e modernas "
>
	<main class="text-white">
		<SectionContainer id="top" class="pt-20 pb-44 lg:py-44 pb-30">
			<Hero />
		</SectionContainer>
		<SectionContainer id="experiencia">
			<h2 class="text-2xl mb-6 font-semibold flex gap-x-3 items-center">
				<BriefcaseIcon class="size-8" />
				Experiencia Laboral
			</h2>
			<Experiencia />
		</SectionContainer>
		<SectionContainer class="pb-8" id="proyectos">
			<h2 class="text-2xl mb-6 font-semibold flex gap-x-3 items-center">
				<CodeIcon class="size-8" />
				Proyectos personales
			</h2>
			<Proyectos />
		</SectionContainer>
		<SectionContainer id="sobre-mi">
			<h2 class="text-2xl mb-6 font-semibold flex gap-x-3 items-center">
				<UserIcon class="size-8" />
				Sobre Mi
			</h2>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>
