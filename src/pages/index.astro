---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<section class="w-[740px] mx-auto py-44">
			<h1
				class="text-white text-5xl font-bold flex flex-row gap-x-5 pb-10"
			>
				¡Hola, soy Brandon!<a
					href="https://www.linkedin.com/in/brandon-toapanta-8a87b4199/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para tranajer</Badge>
				</a>
			</h1>
			<h2 class="text-2xl text-wrap">
				<span class="font-bold text-blue-300"
					>+1 años de experiencia.</span
				>
				<span class="text-orange-200/90"
					>Desarrollador web y tecnologo de Desarrollo de Software.</span
				>
				<span class="text-indigo-200/90"> De Quito - Ecuador.</span>
				<span class="opacity-80"
					>Apasionado del desarrollo de Software, con ideas inovadoras
					y modernas.</span
				>
			</h2>
		</section>
	</main>
</Layout>
