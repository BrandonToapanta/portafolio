---
export interface Props {
    date: string;
    title: string;
    description: string[];
    empresa: string;
}
const { date, title, description, empresa } = Astro.props;
---

<div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400">{date}</time>
<h3 class="text-2xl my-4 font-semiboldtext-white text-yellow-200">
    {title}
</h3>
<span class="bg-white/10 text-gray-600 opacity-90 py-1 px-2 rounded-full"
    >{empresa}</span
>
<ul class="mb-4 mt-1 text-base font-normaltext-gray-400 text-pretty">
    {description.map((desc) => <li class="list-disc ml-5 my-2">{desc}</li>)}
</ul>
